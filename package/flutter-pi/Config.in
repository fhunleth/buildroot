config BR2_PACKAGE_FLUTTER_PI_ARCH_SUPPORTS
	bool
	default y if BR2_arm || BR2_aarch64

comment "flutter-pi needs an ARMarchitecture and a toolchain w/ dynamic library, threads"
	depends on BR2_USE_MMU # fork()
	depends on BR2_PACKAGE_FLUTTER_PI_ARCH_SUPPORTS
	depends on !BR2_PACKAGE_HAS_LIBEGL
	depends on BR2_STATIC_LIBS || !BR2_TOOLCHAIN_HAS_THREADS

config BR2_PACKAGE_FLUTTER_PI
	bool "flutter-pi"
	depends on BR2_USE_MMU # fork()
	depends on !BR2_STATIC_LIBS
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on BR2_PACKAGE_HAS_LIBEGL
	depends on BR2_PACKAGE_FLUTTER_PI_ARCH_SUPPORTS
	select BR2_PACKAGE_LIBINPUT
	select BR2_PACKAGE_LIBXKBCOMMON
	select BR2_PACKAGE_XKEYBOARD_CONFIG
	select BR2_PACKAGE_FLUTTER_ENGINE_BINARIES_FOR_ARM
	help
	  A light-weight Flutter Engine Embedded for Raspberry Pi that runs without X.

	  https://github.com/ardera/flutter-pi
